<!DOCTYPE html>
<html lang="es">

	<%- include('partials/head', {title: 'Inicio'}) %>

	<body>
	
	<%- include('partials/header') %>
	<main>


		<% if(results.length>0){ %>
			<section id="destacados" class="articles">
				<h2 class="block"> Resultado para:  <%= searchProduct; %>. </h2>
	
				<% results.forEach( function( product ){ %>
					<article>
						<a href="/products/detail/<%= product.id; %>">
						<img src="/images/<%= product.image[0]; %>" width="300" alt="Cafetera Moulinex" />
						<div class="artCont">
							<i class="fa-solid fa-truck"></i>
							<div class="precioDesc">
								<p class="precio">$ <%= product.price; %></p>
								<p class="descuentos"> <%= product.discount; %>% off</p>
							</div>
							<strong class="descripciones"> <%= product.name; %></strong>
						</div>
					</a>
					</article>
		
					<% }) %>
	
			</section>
		
			<% } else { %>
				<section id="destacados">
					<h2 class="block">:( lo sentimos, no encontramos art√≠culos con el nombre:  <%= searchProduct; %></h2>
				</section>
				
			<% } %>
	
	</main>

	<%- include('partials/footer') %>
</body>	
</html>