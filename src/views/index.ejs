<!DOCTYPE html>

<html>

    <%- include('partials/head') %>


<body>

    <%- include('partials/header') %>

    <main>

        <div class="banner">
            <img src="/images/img-home-banner.jpg" class="banner" width="300" alt="Banner" />
        </div>

        <section id="ultimaVisita" class="articles">

            <h2>Basado en tu última visita</h2>

            <% latest.forEach( function( product ){ %>
            <article>
                <a href="/products/detail/<%= product.id; %>">
                <img src="/images/<%= product.image[0]; %>" width="300" alt="Cafetera Moulinex" />
                <div class="artCont">
                    <i class="fa-solid fa-truck"></i>
                    <div class="precioDesc">
                        <p class="precio">$ <%= product.price; %></p>
                        <p class="descuentos"> <%= product.discount; %>% off</p>
                    </div>
                    <strong class="descripciones"> <%= product.name; %></strong>
                </div>
            </a>
            </article>

            <% }) %>

    
        </section>


        <section id="seccionOfertas" class="articles">

            <h2>Sección de Ofertas</h2>

            <% offers.forEach( function( product ){ %>
                <article>
                    <a href="/products/detail/<%= product.id; %>">
                    <img src="/images/<%= product.image[0]; %>" width="300" alt="Cafetera Moulinex" />
                    <div class="artCont">
                        <i class="fa-solid fa-truck"></i>
                        <div class="precioDesc">
                            <p class="precio">$ <%= product.price; %></p>
                            <p class="descuentos"> <%= product.discount; %>% off</p>
                        </div>
                        <strong class="descripciones"> <%= product.name; %></strong>
                    </div>
                </a>
                </article>
    
                <% }) %>

        </section>

    </main>

    <%- include('partials/footer') %>
</body>

</html>